<% if users.any? %>
    <ul class="media-list">
        <% users.each do |user| %>
        <li class="media">
            <div class="media-left">
                <img class="media-object" "img-rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="" >
            </div>
            <div class="media-body">
                <% if user.id == current_user.id %>
                    <div><strong>
                        <%= user.name %> 登録タスク<%= user.tasks.count %>件
                    </strong></div>
                    <div>
                        <P><%= link_to 'View prpfile', user_path(user) %></P>
                    </div>
                <% else %>
                    <div>
                        <%= user.name %> 登録タスク<%= user.tasks.count %>件
                    </div>
                    <div>
                        <P><%= link_to 'View prpfile', user_path(user) %></P>
                    </div>
                <% end %>
            </div>
        </li>
        <% end %>
    </ul>
    <%= paginate users %>
<% end %>


